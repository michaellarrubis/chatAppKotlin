<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#8BC34A">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/usernameRegister"
            android:paddingLeft="16dp"

            android:background="@drawable/rounded_register_login" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="32dp" android:layout_marginTop="44dp"
            android:hint="Username" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/registerImage"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailRegister"
            android:paddingLeft="16dp"
            android:background="@drawable/rounded_register_login" android:hint="Email " android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/usernameRegister"
            app:layout_constraintEnd_toEndOf="@+id/usernameRegister"
            app:layout_constraintStart_toStartOf="@+id/usernameRegister"
    />
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordRegister"
            android:paddingLeft="16dp"
            android:background="@drawable/rounded_register_login" android:hint="Password"
            app:layout_constraintStart_toStartOf="@+id/emailRegister" app:layout_constraintEnd_toEndOf="@+id/emailRegister"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/emailRegister"/>
    <Button
            android:text="Register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:background="@drawable/rounded_button_register_login"
            app:layout_constraintEnd_toEndOf="@+id/passwordRegister"
            app:layout_constraintStart_toStartOf="@+id/passwordRegister" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordRegister" app:layout_constraintHorizontal_bias="0.498"
            android:id="@+id/buttonRegister"/>
    <TextView
            android:text="Already have an account?"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goToLoginActivity"
            app:layout_constraintTop_toTopOf="@+id/buttonRegister"
            app:layout_constraintStart_toStartOf="@+id/buttonRegister" app:layout_constraintEnd_toEndOf="@+id/buttonRegister"
            android:layout_marginTop="80dp" app:layout_constraintHorizontal_bias="0.496"/>
    <Button
            android:text="Select Image"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:background="@drawable/rounded_select_image"
            android:layout_width="150dp"
            android:layout_height="150dp" tools:layout_editor_absoluteY="47dp"
            android:id="@+id/registerImage" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
</android.support.constraint.ConstraintLayout>